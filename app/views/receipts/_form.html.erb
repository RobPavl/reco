
 <%= simple_form_for @receipt do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-category">
      <%= f.association :category, as: :select %>
    </div>

    <div class="form-step">
      <%= f.input :steps, as: :text  %>
    </div>

    <div class="form-photo">
      <%= image_tag(@receipt.photo.url) if @receipt.photo? %>
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %>
    </div>

  <div class="form-buttons">
    <%= f.association :options, as: :check_boxes %>
  </div>

  <div class="form-submit">
    <%= f.button :submit %>
  </div>
<% end %>





